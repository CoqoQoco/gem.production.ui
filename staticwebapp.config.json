{
  "$schema": "https://json.schemastore.org/staticwebapp.config.json",
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["/api/*", "*.{png,jpg,jpeg,gif,css,js,ico,svg}"]
  },
  "routes": [
    // สามารถเพิ่มการตั้งค่า Route พิเศษที่นี่ได้
  ],
  "responseOverrides": {
    "404": {
      "rewrite": "/index.html",
      "statusCode": 200
    }
  }
}